{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "applications",
  "projects": {
    "design-system": {
      "prefix": "ds",
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist",
            "index": "src/index.html",
            "main": "src/main.ts",
            "tsConfig": "src/tsconfig.app.json",
            "polyfills": "src/polyfills.ts",
            "stylePreprocessorOptions": {
              "includePaths": [
                "src/scss/overrides",
                "node_modules/@lucca-front/scss/src/overrides",
                "node_modules/@lucca-front/ng/style/overrides"
              ]
            },
            "assets": [
              "src/assets",
              "src/favicon.ico",
              "src/guidelines"
            ],
            "styles": [
              "src/styles.scss"
            ],
            "scripts": [
              "node_modules/marked/lib/marked.js"
            ]
          },
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            },
            "deploy": {
              "outputPath": "docs",
              "extractCss": true,
              "baseHref": "/design-system",
              "deployUrl": "/design-system/",
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.deploy.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "design-system:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "design-system:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "design-system:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "karmaConfig": "./karma.conf.js",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.spec.json",
            "scripts": [],
            "styles": [
              "src/styles.scss"
            ],
            "assets": [
              "src/assets",
              "src/favicon.ico"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "src/tsconfig.app.json",
              "src/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**",
              "api/**"
            ]
          }
        }
      }
    },
    "common": {
      "root": "libraries/common",
      "sourceRoot": "./",
      "projectType": "library",
      "prefix": "pri",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "libraries/common/tsconfig.lib.json",
            "project": "libraries/common/ng-package.json"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "libraries/common/src/test.ts",
            "tsConfig": "libraries/common/tsconfig.spec.json",
            "karmaConfig": "libraries/common/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "libraries/common/tsconfig.lib.json",
              "libraries/common/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "prisme": {
      "root": "applications/prisme/",
      "sourceRoot": "applications/prisme/src",
      "projectType": "application",
      "prefix": "pri",
      "schematics": {
        "@schematics/angular:component": {
          "styleext": "scss"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/prisme",
            "index": "applications/prisme/src/index.html",
            "main": "applications/prisme/src/main.ts",
            "polyfills": "applications/prisme/src/polyfills.ts",
            "tsConfig": "applications/prisme/tsconfig.app.json",
            "assets": [
              "applications/prisme/src/assets",
              "applications/prisme/src/guidelines"
            ],
            "styles": [
              "applications/prisme/src/styles.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "libraries",
                "theming",
                "node_modules/@lucca-front/scss/src/overrides",
                "node_modules/@lucca-front/ng/style/overrides"
              ]
            },
            "scripts": [
              "node_modules/marked/lib/marked.js"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "applications/prisme/src/environments/environment.ts",
                  "with": "applications/prisme/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "prisme:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "prisme:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "prisme:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "applications/prisme/src/test.ts",
            "polyfills": "applications/prisme/src/polyfills.ts",
            "tsConfig": "applications/prisme/tsconfig.spec.json",
            "karmaConfig": "applications/prisme/karma.conf.js",
            "styles": [
              "applications/prisme/src/styles.scss"
            ],
            "scripts": [],
            "assets": [
              "applications/prisme/src/favicon.ico",
              "applications/prisme/src/assets"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "applications/prisme/tsconfig.app.json",
              "applications/prisme/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "prisme",
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "pri",
      "styleext": "scss"
    },
    "@schematics/angular:directive": {
      "prefix": "pri"
    },
    "@prisme/schematics:example": {}
  },
  "cli": {
    "defaultCollection": "@prisme/schematics",
    "packageManager": "npm"
  }
}